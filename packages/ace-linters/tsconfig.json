{
  "compilerOptions": {
    "outDir": "./out",
    "allowJs": true,
    "strictNullChecks": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": [
    "node_modules",
    "build",
    "out",
    "coverage",
    "tests"
  ],
  "include": [
    "./**/*.ts"
  ]
}
