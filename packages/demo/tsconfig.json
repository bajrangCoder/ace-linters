{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./build",
    "allowJs": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}
